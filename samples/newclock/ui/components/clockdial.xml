<?xml version="1.0" encoding="UTF-8"?>

<!-- <Widget w="256" h="256"> -->
    <Bmp name="'dial'" src="'assets/256/clock_dial.png'" w="256" h="256">
		<RotateWidget name="'hur'" w="20" h="256" on-display="$this.x=($this.wparent.w-$this.w)/2;" rotateAxis="45">
			<Bmp src="'assets/256/hour_hand.png'" w="20" h="256" />
		</RotateWidget>
		<RotateWidget name="'min'" w="20" h="256" on-display="$this.x=($this.wparent.w-$this.w)/2;" rotateAxis="90">
			<Bmp src="'assets/256/minute_hand.png'" w="20" h="256"/>
		</RotateWidget>
		<RotateWidget name="'sec'" w="20" h="256" on-display="$this.x=($this.wparent.w-$this.w)/2;" rotateAxis="190">
			<Bmp src="'assets/256/second_hand.png'" w="20" h="256"/>
		</RotateWidget>
	</Bmp>
<!-- </Widget>-->
