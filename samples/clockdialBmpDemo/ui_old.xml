<?xml version="1.0" encoding="UTF-8"?>

<Box skin:Paint-color="0xFFFFFF" w="$Lib.current.stage.stageWidth" h="$Lib.current.stage.stageHeight" padding="50" childPadding="30">
    <Bmp id="'dial'" src="'assets/old/256/clock_dial.png'" w="256" h="256">
		<RotateWidget id="'hur'" w="18" h="67" on-display="
			$this.x=(#dial.w+2-$this.w)/2;
			$this.y=#dial.h/2-$this.h+4;
			$this.xAxis=$this.w/2;
			$this.yAxis=$this.h-10/2;
			$this.rotateAxis=45;
		">
			<Bmp src="'assets/old/256/hour_hand.png'" w="18" h="67" />
		</RotateWidget>
		
		<RotateWidget id="'min'" w="18" h="67" on-display="
			$this.x=(#dial.w+2-$this.w)/2;
			$this.y=#dial.h/2-$this.h+4;
			$this.xAxis=$this.w/2;
			$this.yAxis=$this.h-10/2;
			$this.rotateAxis=90;
		">
			<Bmp src="'assets/old/256/minute_hand.png'" w="18" h="67"/>
		</RotateWidget>
		<RotateWidget id="'sec'" w="18" h="67" on-display="
			$this.x=(#dial.w+2-$this.w)/2;
			$this.y=#dial.h/2-$this.h+4;
			$this.xAxis=$this.w/2;
			$this.yAxis=$this.h-10/2;
			$this.rotateAxis=190;
		">
			<Bmp src="'assets/old/256/second_hand.png'" w="18" h="67"/>
		</RotateWidget>

	</Bmp>
</HBox>
