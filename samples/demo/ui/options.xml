<?xml version="1.0" encoding="UTF-8"?>

<!-- Options lists demo -->
<Scroll name="'options'" defaults="'Screen,Level1'">
    <VBox widthPt="100" align="'top,center'" childPadding="20" paddingTop="10">
        <VBox widthPt="100">
            <Text text="'Options list'" />
            <Text defaults="'LightTip'" text="'Here are two most common cases for options list.'" widthPt="100" align="'center,middle'" />
            <Widget defaults="'HR'" />
        </VBox>

        <!-- Picker list -->
        <Options
            defaults = "'Picker'"
            options = "[['apple', 'wow'], ['pancakes', 'yay'], ['peanut butter', 'doh']]"
        />

        <!-- Drop down -->
        <Options options = "[['lion', 1], ['camel', 2], ['elephant', 3]]"/>

    </VBox>
</Scroll>